@model List<FlavourFusion.Models.Tbl_Announcement>
<head>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>
<style>
    .accordion-item {
        padding-top: 10px;
        padding-bottom: 10px;
        border-color: white;
    }

    #accordionExample {
        box-shadow: rgba(17, 12, 46, 0.04) 0px 48px 100px 0px;
    }

    .accordion-item:focus, .accordion-button:focus {
        outline: none;
        outline: none !important;
        box-shadow: none;
    }

    .accordion-button {
        background-color: transparent;
        color: black;
    }

        .accordion-button:hover {
            background-color: orange;
            color: white;
        }

        .accordion-button.active {
            background-color: orange;
            color: white;
        }

    .subscribe {
        background-image: url(../../Template/assets/images/calculate-bg.png);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: white;
        width: 900px;
        height: 450px;
        border-radius: 20px;
        box-shadow: rgba(17, 12, 46, 0.05) 0px 48px 100px 0px;
        position: relative;
        left: 160px;
        margin-bottom: 150px;
    }

    .subscribe__title {
        font-weight: bold;
        font-size: 26px;
        margin-bottom: 18px;
    }

    .subscribe__copy {
        max-width: 450px;
        text-align: center;
        margin-bottom: 53px;
        line-height: 1.5;
    }

    .form {
        margin-bottom: 25px;
    }

    .form__email {
        padding: 20px 25px;
        border-radius: 5px;
        border: 1px solid #CAD3DB;
        width: 431px;
        font-size: 18px;
        color: #0F121F;
    }

        .form__email:focus {
            outline: 1px solid black;
        }

    .form__button {
        background: rgb(255, 132, 0);
        padding: 10px;
        border: none;
        width: 244px;
        height: 65px;
        border-radius: 5px;
        font-size: 18px;
        color: white;
        box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px;
        transition: 0.2s;
    }

        .form__button:hover {
            box-shadow: none;
        }
</style>
<div class="inner-banner inner-bg9">
    <div class="container">
        <div class="inner-title text-center">
            <h3>Our Announcement</h3>
        </div>
    </div>
</div>

<div class="about-area-two pt-100 pb-70">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="about-content-two">
                    <div class="section-title">
                        <span>Announcement</span>
                        <h2 style="font-weight:600;">Our All Updates & New Events Appeared Here</h2>
                        <p>
                            We are excited to announce that a new feature is on its way to enhance your experience. Stay tuned for updates and get ready to explore exciting functionalities that will take your journey to the next level.
                        </p>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="about-content-item">
                                <i class="flaticon-diet"></i>
                                <h3>Latest Announcements</h3>
                                <p>Stay up-to-date with our latest announcements and news. We provide regular updates on exciting events, new features, and important information to keep you informed and engaged. Don't miss out on any important updates! Stay connected with us.</p>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="about-content-item">
                                <i class="flaticon-exercise"></i>
                                <h3>Announcement Highlights</h3>
                                <p>Explore the highlights of our announcements to get a quick overview of the most significant news and updates. We curate the most important information to ensure you are aware of the key developments and opportunities within our community.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 pe-0">
                <img src="~/Template/assets/images/updates.png" alt="Images" style="border-radius: 8px;">
            </div>
        </div>
    </div>
</div>


<h2 class="text-center">
    Our Chef Announcements
</h2>

<div class="container" style="margin-left: 45px; margin-top: 15px; margin-bottom: 120px;">
    <div class="accordion" id="accordionExample">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading_@item.Annoucement_id">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@item.Annoucement_id"
                                aria-expanded="false" aria-controls="collapse_@item.Annoucement_id" style="background-color:white;color:black;">
                            @item.Annoucement_Text
                        </button>
                    </h2>
                    <div id="collapse_@item.Annoucement_id" class="accordion-collapse collapse" aria-labelledby="heading_@item.Annoucement_id"
                         data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <strong style="background-color: darkorange; padding: 10px; border-radius: 6px; color: black; box-shadow: rgba(17, 12, 46, 0.1) 0px 48px 100px 0px;color:white;">@item.Annoucement_Date</strong>
                            <p style="margin-top:15px;">@item.Annoucement_Description</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<div class="subscribe">
    <h1 class="subscribe__title" style="font-size:50px;">Let's keep in touch</h1>
    <p class="subscribe__copy">Subscribe to keep up with fresh news and exciting updates. We promise not to spam you!</p>
    <div class="form">
        <input type="email" class="form__email" placeholder="Enter your email address" />
        <button class="form__button" style="font-size:25px;">Send</button>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.accordion-button').on('click', function () {
            $('.accordion-button').removeClass('active');
            $(this).addClass('active');
        });
    });
</script>
