@model FlavourFusion.Models.Tbl_Users
<head>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
    <title>Login Your Account - FlavourFusion</title>
    <style>
        .toast {
            background-color: white;
            position: fixed;
            right: 20px;
            z-index: 1;
            margin-bottom: 120px;
            box-shadow: rgba(17, 12, 46, 0.15) 0px 48px 100px 0px;
        }
    </style>
</head>
@if (TempData["ToastMessage"] != null)
{
    <div role="alert" aria-live="assertive" aria-atomic="true" class="toast" data-autohide="false" style="position: fixed; top: 50px; right: 10px; z-index: 9999;">
        <div class="toast-header">
            <img src="~/Content/img/greentick-icon.png" height="23" width="23" class="rounded mr-2" alt="...">
            <small>@DateTime.Now</small>
            <button type="button" class="btn-close btn-close-dark end-0" id="thebutton" onclick="$(this).closest('.toast').toast('hide')" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            <p class="card-text">@TempData["ToastMessage"]</p>
        </div>
    </div>
    <script>
    $(document).ready(function () {
        @if (TempData["ToastMessage"] != null)
        {
            @: $('.toast').toast('show');
        }
    });
    </script>
}
<div class="inner-banner inner-bg7">
    <div class="container">
        <div class="inner-title text-center">
            <h3>Log In</h3>
        </div>
    </div>
</div>

<div class="user-area pt-100 pb-70">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <div class="user-all-form">
                    <div class="contact-form">
                        <h3>Log In</h3>
                        @using (Html.BeginForm("Login", "FlavourFusion", FormMethod.Post, new { id = "contactForm" }))
                        {
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.user_name, new { @class = "form-control", placeholder = "Username or Email", required = "required", data_error = "Please enter your Username or Email", @style = "background-color: #FCFBFB " })
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        @Html.PasswordFor(m => m.user_password, new { @class = "form-control", placeholder = "Password", @style = "background-color: #FCFBFB " })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 text-center">
                                    <button type="submit" class="default-btn">
                                        Log In Now
                                    </button>
                                </div>
                                <div class="col-12">
                                    <p class="account-desc text-center">
                                        Not a member?
                                        <a href="@Url.Action("Register","FlavourFusion")">Register</a>
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>