﻿@model FlavourFusion.Models.Tbl_Recipe
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
      <title>Add New Recipe - Shopio The Best Ecommerce Store in The Town</title>
    <style>

        body {
            font-family: 'Poppins', sans-serif;
        }

        form {
            padding-top: 40px;
            padding-bottom: 30px;
            padding-left: 100px;
            padding-right: 100px;
            margin-top: 50px;
            border-radius: 25px;
            margin-top: 50px;
            margin-bottom: 50px;
            box-shadow: rgba(17, 12, 46, 0.08) 0px 48px 100px 0px;
        }

        #thebutton {
            border: none;
            cursor: pointer;
            width: 100%;
            font-size: 23px;
            height: 45px;
        }

            #thebutton:hover {
                box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
            }

        input {
            border-radius: 4.5px;
            padding: 10px;
            width: 100%;
            box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
        }

        select.form-control {
            margin-bottom: 30px;
        }

        .theform input:focus,
        .theform textarea:focus,
        .theform select:focus {
            outline: none;
            box-shadow: none;
            border-color: rgb(255, 132, 0);
        }

        .theform .form-group {
            margin-bottom: 25px;
        }

        textarea {
            box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
        }

        #navbar-example2 {
            margin-top: 50px;
            box-shadow: rgba(0, 0, 0, 0.03) 0px 10px 50px;
            width: 900px;
            margin-left: auto;
            margin-right: auto;
            border-radius: 8px;
            height: 60px;
        }

        .thenav-link {
            color: black;
            font-size: 17px;
            transition: 0.2s;
        }

            .thenav-link:hover {
                color: rgb(255, 132, 0);
                font-size: 19px;
            }

        .nav-link:focus,
        .nav-link:active,
        .nav-link:focus,
        .nav-link:active {
            color: black;
            outline: none;
        }

        .nav-link:hover {
            color: rgb(255, 132, 0);
        }

        .dropdown-toggle::after {
            transition: transform 0.2s ease-in-out;
            transform: rotate(0deg);
        }

        .dropdown-toggle:hover::after {
            transform: rotate(180deg);
        }

        .dropdown-toggle[aria-expanded="true"]::after {
            transform: rotate(180deg);
        }

        .dropdown-menu {
            background: white;
            border: none;
            padding: 13px;
            box-shadow: rgba(17, 12, 46, 0.15) 0px 48px 100px 0px;
            border-radius: 8px;
            height: 90px;
        }
    </style>
</head>
<nav id="navbar-example2" class="navbar navbar-light d-flex justify-content-center">
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link thenav-link" href="@Url.Action("Admin_Panel")">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link thenav-link" href="@Url.Action("Add_Recipe_Category")">Add Categories</a>
        </li>
        <li class="nav-item">
            <a class="nav-link thenav-link" href="@Url.Action("View_Category")">View Categories</a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle thenav-link" href="#" role="button" aria-haspopup="true" aria-expanded="false">Recipes</a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="@Url.Action("Recipe_Add")">Add Recipe</a></li>
                <li><a class="dropdown-item" href="@Url.Action("ViewAllRecipes")">View Recipes</a></li>
            </ul>
        </li>
        <li class="nav-item">
            <a class="nav-link thenav-link" href="@Url.Action("RegisteredUser")">All Registered Users</a>
        </li>
        <li class="nav-item">
            <a class="nav-link thenav-link" href="@Url.Action("Logout")">Logout</a>
        </li>
    </ul>
</nav>
<script>
    // Open dropdown menu on hover
    $(document).ready(function () {
        $('.dropdown').hover(
            function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeIn(10);
            },
            function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeOut(10);
            }
        );
    });
</script>
<div class="d-flex justify-content-center align-items-center">
    @using (Html.BeginForm("Recipe_Add", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "theform" }))
    {
    <h3 class="text-center mb-4">Add New Recipe! 😃</h3>

        <div class="form-group">
            @Html.LabelFor(x => x.FK_Category_Recipe, "Select Category:")
            @Html.DropDownListFor(x => x.FK_Category_Recipe, ViewBag.categorylist as SelectList, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.recipe_name, "Recipe Name:")
            @Html.TextBoxFor(x => x.recipe_name, new { @class = "form-control", @placeholder = "Enter Product Name" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.recipe_description, "Recipe Description:")
            @Html.TextAreaFor(x => x.recipe_description, new { @class = "form-control", @placeholder = "Enter Product Description" })
        </div>

        <div class="form-group">
            @Html.Label("Recipe Images:")
            <input type="file" name="imgfiles" id="imgfiles" class="form-control-file" required multiple />
        </div>

        <button type="submit" class="btn btn-primary" id="thebutton" style="background-color: rgb(255, 132, 0); outline: none; border: none; margin-top: 10px;">
            Add Recipe
        </button>
    }
</div>