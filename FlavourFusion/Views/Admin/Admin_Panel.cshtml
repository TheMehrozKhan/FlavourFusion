﻿@model FlavourFusion.Models.Tbl_Admin
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
    <title>Our Admin Panel - Shopio</title>
    <style>

        body {
            font-family: 'Poppins', sans-serif;
        }

        h4 {
            font-size: 30px;
            text-align: center;
            margin-top: 40px;
            margin-bottom: 50px;
        }

        .toast {
            position: fixed;
            right: 20px;
            z-index: 1;
            margin-bottom: 120px;
            box-shadow: rgba(17, 12, 46, 0.15) 0px 48px 100px 0px;
        }

        #thebutton {
            position: relative;
            left: 130px;
        }

        #navbar-example2 {
            box-shadow: rgba(17, 12, 46, 0.06) 0px 48px 100px 0px;
            width: 900px;
            margin-left: auto;
            margin-right: auto;
            border-radius: 8px;
            height: 60px;
        }

        .thenav-link {
            color: black;
            font-size: 17px;
            transition: 0.2s;
        }

            .thenav-link:hover {
                color: rgb(255, 132, 0);
                font-size: 19px;
            }


        .table-responsive::-webkit-scrollbar {
            display: none;
        }

        .center-card {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 80px;
            margin-bottom: 50px;
        }

        .center-heading {
            text-align: center;
            margin-top: 20px;
        }

        .thecard {
            height: 250px;
            border-radius: 10px;
            border: none;
            position: relative;
            margin-bottom: 30px;
            background-color: mediumslateblue;
            transition: 0.3s;
        }

            .thecard:hover {
                margin: 2px;
            }

        .fa-shopping-cart {
            font-size: 150px;
            margin-top: 50px;
            text-align: center;
            margin-right: 3px;
            color: white;
            position: absolute;
            right: -4px;
            top: 20px;
            opacity: 0.08;
        }

        .nav-link:focus,
        .nav-link:active,
        .nav-link:focus,
        .nav-link:active {
            color: black;
            outline: none;
        }

        .nav-link:hover {
            color: rgb(255, 132, 0);
        }

        .dropdown-toggle::after {
            transition: transform 0.2s ease-in-out;
            transform: rotate(0deg); 
        }

        .dropdown-toggle:hover::after {
            transform: rotate(180deg); 
        }

        .dropdown-toggle[aria-expanded="true"]::after {
            transform: rotate(180deg); 
        }
    </style>
</head>
@if (TempData["ToastMessage"] != null)
{
    <div role="alert" aria-live="assertive" aria-atomic="true" class="toast" data-autohide="false">
        <div class="toast-header">
            <img src="~/Content/img/greentick-icon.png" height="23" width="23" class="rounded mr-2" alt="...">
            <small>@DateTime.Now</small>
            <button type="button" class="btn-close btn-close-dark end-0" id="thebutton" onclick="$(this).closest('.toast').toast('hide')" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            <p class="card-text">@TempData["ToastMessage"]</p>
        </div>
    </div>
    <script>
    $(document).ready(function () {
        @if (TempData["ToastMessage"] != null)
        {
            @: $('.toast').toast('show');
        }
    });
    </script>
}
<h4> @Session["ad_name"] , Welcome To Admin Panel</h4>
<nav id="navbar-example2" class="navbar navbar-light d-flex justify-content-center">
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link thenav-link" href="@Url.Action("Admin_Panel")">Home</a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle thenav-link" href="#" role="button" aria-haspopup="true" aria-expanded="false">Categories</a>
            <ul class="dropdown-menu" style="background: white; border: none; padding: 13px; box-shadow: rgba(17, 12, 46, 0.2) 0px 48px 100px 0px; border-radius: 8px; height: 90px;">
                <li><a class="dropdown-item" href="@Url.Action("Add_Recipe_Category")">Add Category</a></li>
                <li><a class="dropdown-item" href="@Url.Action("View_Category")">View Category</a></li>
            </ul>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle thenav-link" href="#" role="button" aria-haspopup="true" aria-expanded="false">Events & Updates</a>
            <ul class="dropdown-menu" style="background: white; border: none; padding: 13px; box-shadow: rgba(17, 12, 46, 0.2) 0px 48px 100px 0px; border-radius: 8px;">
                <li><a class="dropdown-item" href="@Url.Action("CreateContest")">Add Contest</a></li>
                <li><a class="dropdown-item" href="@Url.Action("ViewContest")">View Contest</a></li>
                <li><a class="dropdown-item" href="@Url.Action("ViewSubmissions")">Contest Submissions</a></li>
                <li><a class="dropdown-item" href="@Url.Action("Add_Annoucement")">Add Announcement</a></li>
                <li><a class="dropdown-item" href="@Url.Action("View_Annoucement")">View Announcement</a></li>
            </ul>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle thenav-link" href="#" role="button" aria-haspopup="true" aria-expanded="false">Recipes</a>
            <ul class="dropdown-menu" style="background: white; border: none; padding: 13px; box-shadow: rgba(17, 12, 46, 0.2) 0px 48px 100px 0px; border-radius: 8px; height: 90px;">
                <li><a class="dropdown-item" href="@Url.Action("Recipe_Add")">Add Recipe</a></li>
                <li><a class="dropdown-item" href="@Url.Action("ViewAllRecipes")">View Recipes</a></li>
            </ul>
        </li>
        <li class="nav-item">
            <a class="nav-link thenav-link" href="@Url.Action("RegisteredUser")">All Registered Users</a>
        </li>
        <li class="nav-item">
            <a class="nav-link thenav-link" href="@Url.Action("Logout")">Logout</a>
        </li>
    </ul>
</nav>
<script>
    // Open dropdown menu on hover
    $(document).ready(function () {
        $('.dropdown').hover(
            function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeIn(10);
            },
            function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeOut(10);
            }
        );
    });
</script>

<div class="container">
    <div class="row">
        <div class="col-md-6" style="margin-top:50px;">
            <div class="thecard mx-auto">
                <div class="card-statistic-3 p-4">
                    <div class="card-icon card-icon-large">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div class="mb-4" style="margin-top: 30px;">
                        <h5 class="card-title mb-0 text-white">Total Recipes</h5>
                    </div>
                    <div class="row align-items-center mb-2 d-flex">
                        <div class="col-8">
                            <h2 class="d-flex align-items-center mb-0 text-white">
                                @ViewBag.TotalOrders
                            </h2>
                        </div>
                        <div class="col-4 text-right">
                            <span class="text-white">12.5% <i class="fa fa-arrow-up"></i></span>
                        </div>
                    </div>
                    <div class="progress mt-1 " data-height="8" style="height: 8px;">
                        <div class="progress-bar" role="progressbar" data-width="25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;background-color:greenyellow;"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6" style="margin-top:50px;">
            <div class="thecard mx-auto">
                <div class="card-statistic-3 p-4">
                    <div class="card-icon card-icon-large">
                        <i class="fas fa-shopping-cart" style="font-size: 150px; margin-top: 50px; text-align: center; margin-right: 3px; color: white; position: absolute; right: -4px; top: 20px; opacity: 0.08;"></i>
                    </div>
                    <div class="mb-4" style="margin-top: 30px;">
                        <h5 class="card-title mb-0 text-white">Total Members</h5>
                    </div>
                    <div class="row align-items-center mb-2 d-flex">
                        <div class="col-8">
                            <h2 class="d-flex align-items-center mb-0 text-white">
                                @ViewBag.totalProducts
                            </h2>
                        </div>
                        <div class="col-4 text-right">
                            <span class="text-white">10.5% <i class="fa fa-arrow-up"></i></span>
                        </div>
                    </div>
                    <div class="progress mt-1 " data-height="8" style="height: 8px;">
                        <div class="progress-bar" role="progressbar" data-width="20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%;background-color:greenyellow;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="center-card" style="border: none; text-align: center">
        <div class="card container center-table bg-white" style="box-shadow: rgba(17, 12, 46, 0.06) 0px 48px 100px 0px; border-color: white;border-radius:12px;">
            <div class="table-responsive" style="height: 500px; overflow-y: scroll;">
                <h2 style="margin-bottom: 25px; margin-top: 25px;">Our <span style="color: rgb(255, 132, 0);">Users</span></h2>
                <hr style="font-weight:100;color:rgba(17, 12, 46, 0.05);" />
                @if (ViewBag.Orders != null)
                {
                    <table class="table table-borderless bg-white text-black customtable" style="border-radius: 80px;">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Product ID</th>
                                <th>Bill</th>
                                <th>Quantity</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in ViewBag.Orders)
                            {
                                <tr>
                                    <td>@order.o_id</td>
                                    <td>@order.o_fk_pro</td>
                                    <td>@order.o_bill</td>
                                    <td>@order.o_qty</td>
                                    <td>@order.o_date</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                <canvas id="orderChart" style="margin:auto;height:320px;width:880px;"></canvas>
            </div>
        </div>
    </div>
</div>