    <title>Add New Recipe Category - FlavourFusion</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        form {
            padding-top: 40px;
            padding-bottom: 30px;
            padding-left: 100px;
            padding-right: 100px;
            margin-top: 50px;
            border-radius: 25px;
            margin-top: 50px;
            margin-bottom: 50px;
            box-shadow: rgba(17, 12, 46, 0.08) 0px 48px 100px 0px;
        }

        #thebutton {
            padding: 10px 16px;
            border: none;
            cursor: pointer;
            width: 100%;
            font-size: 23px;
            height: 55px;
        }

            #thebutton:hover {
                box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
            }

        input {
            border-radius: 4.5px;
            padding: 10px;
            width: 100%;
            box-shadow: rgba(149, 157, 165, 0.1) 0px 8px 24px;
            margin-bottom: 20px;
        }

        #custom-input:focus {
            outline: none;
            box-shadow: none;
            border-color: rgb(255, 132, 0);
        }

        #navbar-example2 {
            margin-top: 50px;
            box-shadow: rgba(0, 0, 0, 0.03) 0px 10px 50px;
            width: 900px;
            margin-left: auto;
            margin-right: auto;
            border-radius: 8px;
            height: 60px;
        }

        .thenav-link {
            color: black;
            font-size: 17px;
            transition: 0.2s;
        }

            .thenav-link:hover {
                color: rgb(255, 132, 0);
                font-size: 19px;
            }

        .nav-link:focus,
        .nav-link:active,
        .nav-link:focus,
        .nav-link:active {
            color: black;
            outline: none;
        }

        .nav-link:hover {
            color: rgb(255, 132, 0);
        }

        .dropdown-toggle::after {
            transition: transform 0.2s ease-in-out;
            transform: rotate(0deg);
        }

        .dropdown-toggle:hover::after {
            transform: rotate(180deg);
        }

        .dropdown-toggle[aria-expanded="true"]::after {
            transform: rotate(180deg);
        }
    </style>
</head>
<nav id="navbar-example2" class="navbar navbar-light d-flex justify-content-center">
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link thenav-link" href="@Url.Action("Admin_Panel")">Home</a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle thenav-link" href="#" role="button" aria-haspopup="true" aria-expanded="false">Categories</a>
            <ul class="dropdown-menu" style="background: white; border: none; padding: 13px; box-shadow: rgba(17, 12, 46, 0.2) 0px 48px 100px 0px; border-radius: 8px; height: 90px;">
                <li><a class="dropdown-item" href="@Url.Action("Add_Recipe_Category")">Add Category</a></li>
                <li><a class="dropdown-item" href="@Url.Action("View_Category")">View Category</a></li>
            </ul>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle thenav-link" href="#" role="button" aria-haspopup="true" aria-expanded="false">Events & Updates</a>
            <ul class="dropdown-menu" style="background: white; border: none; padding: 13px; box-shadow: rgba(17, 12, 46, 0.2) 0px 48px 100px 0px; border-radius: 8px;">
                <li><a class="dropdown-item" href="@Url.Action("CreateContest")">Add Contest</a></li>
                <li><a class="dropdown-item" href="@Url.Action("ViewContest")">View Contest</a></li>
                <li><a class="dropdown-item" href="@Url.Action("ViewSubmissions")">Contest Submissions</a></li>
                <li><a class="dropdown-item" href="@Url.Action("Add_Annoucement")">Add Announcement</a></li>
                <li><a class="dropdown-item" href="@Url.Action("View_Annoucement")">View Announcement</a></li>
            </ul>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle thenav-link" href="#" role="button" aria-haspopup="true" aria-expanded="false">Recipes</a>
            <ul class="dropdown-menu" style="background: white; border: none; padding: 13px; box-shadow: rgba(17, 12, 46, 0.2) 0px 48px 100px 0px; border-radius: 8px; height: 90px;">
                <li><a class="dropdown-item" href="@Url.Action("Recipe_Add")">Add Recipe</a></li>
                <li><a class="dropdown-item" href="@Url.Action("ViewAllRecipes")">View Recipes</a></li>
            </ul>
        </li>
        <li class="nav-item">
            <a class="nav-link thenav-link" href="@Url.Action("RegisteredUser")">All Registered Users</a>
        </li>
        <li class="nav-item">
            <a class="nav-link thenav-link" href="@Url.Action("Logout")">Logout</a>
        </li>
    </ul>
</nav>
<script>
    // Open dropdown menu on hover
    $(document).ready(function () {
        $('.dropdown').hover(
            function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeIn(10);
            },
            function () {
                $(this).find('.dropdown-menu').stop(true, true).delay(100).fadeOut(10);
            }
        );
    });
</script>
<div class="d-flex justify-content-center align-items-center vh-100">
    @using (Html.BeginForm("Add_Recipe_Category", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "signupform" }))
    {
        <form method="post">
            <div class="form-group">
                <label for="username">Category Name:</label>
                @*<input type="text" class="form-group" id="username">*@
                @Html.TextBoxFor(x => x.category_name, new { @class = "form-control", @id = "custom-input", @placeholder = "Enter Category Name" })
                <span style="color: red">@Html.ValidationMessageFor(x => x.category_name)</span>
            </div>
            <div class="form-group">
                <label for="password">Category Image:</label>
                @*&nbsp;<input type="file" class="form-group" id="password">*@
                <input type="file" name="imgfile" id="imgfile" class="input" required />
            </div>
            <button type="submit" class="btn btn-primary" id="thebutton" style="margin-bottom: 5px; margin-top: 5px; background-color: rgb(255, 132, 0); outline: none; border: none;">Add</button>
        </form>
    }
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
        document.getElementById('signupform').addEventListener('submit', function(event) {
            event.preventDefault();
            Swal.fire({
                icon: 'success',
                title: 'Congrats!',
                text: 'Your Recipe Category Are Uploaded!'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("Add_Recipe_Category", "FlavourFusion")';
                    this.submit();
                }
            });
        });
</script>