                                    <li class="nav-item">
                                        <a href="@Url.Action("Faq","FlavourFusion")" class="nav-link">
                                            FAQ'S
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    Authorities
                                    <i class='bx bx-chevron-down'></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a href="@Url.Action("Login","FlavourFusion")" class="nav-link">
                                            Login
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("Register","FlavourFusion")" class="nav-link">
                                            Register
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("Login","Admin")" class="nav-link">
                                            Admin Login
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>

                        <div class="others-options d-flex align-items-center">
                            <div class="optional-item">
                                <div class="search-btn">
                                    <a class="#" href="#searchmodal" data-bs-toggle="modal" data-bs-target="#searchmodal">
                                        <i class='bx bx-search'></i>
                                    </a>
                                </div>
                            </div>
                            @if (Session["u_id"] != null)
                            {
                                <div class="optional-item">
                                    <a href="@Url.Action("UserProfile", "FlavourFusion", new { id = Convert.ToInt32(Session["u_id"]) })" class="default-btn two">Your Profile</a>
                                </div>
                            }
                            else
                            {
                                <div class="optional-item">
                                    <a href="@Url.Action("Pricing","FlavourFusion")" class="default-btn two">Buy An Membership</a>
                                </div>
                            }

                        </div>
                        <div class="mobile-nav">
                            <div class="mobile-other d-flex align-items-center">
                                <div class="optional-item">
                                    <div class="search-btn">
                                        <a class="#" href="#searchmodal" data-bs-toggle="modal" data-bs-target="#searchmodal">
                                            <i class='bx bx-search'></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="optional-item">
                                    <a href="appointment.html" class="default-btn two">Appointment</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </nav>
