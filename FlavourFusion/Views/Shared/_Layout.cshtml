                                    <a href="https://www.facebook.com/" target="_blank">
                                        <i class='bx bxl-facebook' style="background-color:black;"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="https://www.instagram.com/" target="_blank">
                                        <i class='bx bxl-instagram' style="background-color:black;"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="https://twitter.com/" target="_blank">
                                        <i class='bx bxl-twitter' style="background-color:black;"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="https://www.youtube.com/" target="_blank">
                                        <i class='bx bxl-youtube' style="background-color:black;"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        @if (Session["u_id"] != null)
                        {
                            <div class="header-item">
                                <ul>
                                    <li class="title" style="margin-top:5px;">
                                        <a href="@Url.Action("Logout", "FlavourFusion")" style="color:white;">Logout</a>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="header-item">
                                <ul>
                                    <li class="title" style="margin-top:5px;">
                                        <a href="@Url.Action("Login", "FlavourFusion")" style="color:white;">Login</a>
                                    </li>
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </header>


    <div class="navbar-area">
        <div class="mobile-responsive-nav">
            <div class="container">
                <div class="mobile-responsive-menu">
                    <div class="logo">
                        <a href="@Url.Action("Index","FlavourFusion")">
                            <img src="/Template/assets/images/logo.png" class="logo-one" alt="Logo">
                            <img src="/Template/assets/images/logo-white.png" class="logo-two" alt="Logo">
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="desktop-nav nav-area">
            <div class="container">
                <nav class="navbar navbar-expand-md navbar-light ">
                    <a class="navbar-brand" href="@Url.Action("Index","FlavourFusion")">
                        <img src="/Template/assets/images/logo.png" class="logo-one" alt="Logo" width="180">
                        <img src="/Template/assets/images/logo-white.png" class="logo-two" alt="Logo">
                    </a>
                    <div class="collapse navbar-collapse mean-menu" id="navbarSupportedContent">
                        <ul class="navbar-nav m-auto">
                            <li class="nav-item">
                                <a href="@Url.Action("Index","FlavourFusion")" class="nav-link">
                                    Home
