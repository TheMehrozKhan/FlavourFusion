                                <li>
                                    <a href="@Url.Action("Faq","FlavourFusion")" target="_blank">
                                        FAQ
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Contest","FlavourFusion")" target="_blank">
                                        Contest
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Announcement","FlavourFusion")" target="_blank">
